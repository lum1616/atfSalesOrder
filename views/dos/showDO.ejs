<h2 class="page-header">DO Details</h2>

<form action="/dos/<%= doL.id %>?_method=PUT" method="POST">

  <div class="form-row">
    <div class="form-item">
      <label>Date</label>
      <input type="date" name="date" value="<%= doL.date == null ? '' : doL.date.toISOString().split('T')[0] %>" readonly>
    </div>
    <div class="form-item">
      
      <label>Customer</label>
      <input type="text" name= "name" value=" <%=customer.name%> " readonly>     
         
    </div>

    <div class="form-item">
      <label>Issuer</label>
      <input type="text" name="issuer" value="<%= doL.issuer %> " readonly>
    </div>
  
    <div class="form-item">
      <label>DO Number</label>
      <input type="text" name="doNumber" value="<%= doL.doNo %> " readonly>
    </div>
  </div>

  <h3 class="page-header">Parts Details</h3>
  <div class="form-row">
   <table>
     <tr>
       <th>No</th>
       <th>SO No.</th>
       <th>PO No.</th>
       <th>Drawing No.</th>
       <th>Order Qty</th>
       <th>Deliver Qty</th>      
       <th></th>                
     </tr>
      <% let i=1 %>
      <% dos.forEach(dod => { %> 
        <% if (doL.doNo === dod.doNo) { %>
          <tr>
          <td><%= i %></td>
          <td><%= dod.soNumber %></td>
          <td><%= dod.poNumber %> </td>
          <td><%= dod.drawingNo %> </td>
          <td><%= dod.orderQty %> </td>
          <td><%= dod.deliverQty %> </td>
          <td> <a class="btnS btn-primary " href="/dos/<%= dod.id %>/edit">Edit</a></td>          
          </tr>
          <% i= i+1 %>
        <% } %>  
      <% }) %>      

    </table>
  </div>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/dos">Cancel</a>
    <a class="btn btn-primary" href="/dos/<%= doL.id %>/add">Add New Part</a>
    <a class="btn btn-primary" href="/dos/<%= doL.id %>/print">Print</a>
    
     
    <!-- <button class="btn btn-primary" type="submit">Update</button> -->
  </div>
</form>